<?xml version="1.0" encoding="UTF-8"?>
<tempel xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<template>
		<!--
		  - Tworzy w katalogu roboczym ścieżkę katalogów o nazwach przekazanych
		  - przez parametr 'path'
		  -->
		<groupId>org.agiso.tempel.templates</groupId>
		<templateId>base.mkdirs</templateId>
		<version>1.0.0</version>

		<params>
			<param key="path" name="Directory path name" />
		</params>

		<references>
			<reference>
				<groupId>org.agiso.tempel.templates</groupId>
				<templateId>abstract.mkdirs</templateId>
				<version>1.0.0</version>

				<resource>
					<target>${top.path}</target>
				</resource>
			</reference>
		</references>
	</template>
</tempel>
