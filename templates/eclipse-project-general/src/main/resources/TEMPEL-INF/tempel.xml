<?xml version="1.0" encoding="UTF-8"?>
<tempel xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<dependencies>
		<!-- FIXME
		  - Do usunięcia po implementacji mechanizmu dodawania do ścieżki klas
		  - bibliotek podszablonów i wnoszonych przez nie zależności (kaskadowo)
		  -->
		<dependency>
			<groupId>org.agiso.tempel.templates</groupId>
			<artifactId>abstract-mkdir</artifactId>
			<version>1.0.0</version>
		</dependency>
		<dependency>
			<groupId>org.agiso.tempel.templates</groupId>
			<artifactId>abstract-velocityFileEngine</artifactId>
			<version>1.0.0</version>
		</dependency>
	</dependencies>

	<template>
		<groupId>org.agiso.tempel.templates</groupId>
		<templateId>eclipse-project-general</templateId>
		<version>1.0.0</version>

		<params>
			<param key="name" name="Project name" />
		</params>

		<references>
			<reference>
				<groupId>org.agiso.tempel.templates</groupId>
				<templateId>abstract-mkdir</templateId>
				<version>1.0.0</version>

				<resource>
					<target>${top.name}</target>
				</resource>
			</reference>
			<reference>
				<groupId>org.agiso.tempel.templates</groupId>
				<templateId>abstract-velocityFileEngine</templateId>
				<version>1.0.0</version>

				<resource>
					<source>project.vm</source>
					<target>${top.name}/.project</target>
				</resource>
			</reference>
		</references>
	</template>
</tempel>
